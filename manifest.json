{
  "manifest_version": 2,
  "name": "Parameters Viewer",
  "version": "0.4",

  "description": "Shows parameters used in the URL and allows to update them ",

   "permissions": [
	  "activeTab",
          "tabs",
	  "webNavigation"
   ],

  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  
  "page_action": {
    "default_title": "Parameter Viewer",
    "default_icon": "images/icon.png",
    "default_popup": "src/popup.html"
  }
  
} 
